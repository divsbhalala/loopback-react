{
  "memory": {
    "name": "memory",
    "connector": "memory"
  },
  "mongo": {
    "host": "localhost",
    "port": 27017,
    "url": "mongodb://localhost:27017",
    "database": "playground",
    "password": "",
    "name": "mongo",
    "user": "",
    "useNewUrlParser": "true",
    "connector": "mongodb"
  },
  "storage": {
    "name": "storage",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./data/",
    "maxFileSize": "52428800",
    "nameConflict": "makeUnique"
  },
  "email": {
    "name": "email",
    "connector": "mail",
    "transports": [
      {
        "type": "smtp",
        "host": "smtp.yandex.com",
        "secure": true,
        "port": 465,
        "tls": {
          "rejectUnauthorized": false
        },
        "auth": {
          "user": "USER",
          "pass": "PASS"
        }
      }
    ]
  }
}
